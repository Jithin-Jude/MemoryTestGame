<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.game.memoryTestGame.rewards_won">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/happy" />

        <TextView
            android:id="@+id/won"
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:background="@drawable/c_bg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/i_cant_continue"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="45dp"
            android:text="I can't continue"
            android:onClick="i_cant_continue_ButtonFunction" />
        <Button
            android:id="@+id/go_continue"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="200dp"
            android:text="Continue"
            android:onClick="go_continue_ButtonFunction" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
