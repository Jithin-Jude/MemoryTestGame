<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.game.memoryTestGame.result">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg1"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <TextView
            android:id="@+id/givenWrds_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#fffd47"
            android:textSize="20sp"
            android:background="#4F00C2"/>

        <ScrollView
            android:id="@+id/textAreaScroller1"
            android:background="#80000000"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="25dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/givenWrds_result"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/correctWrds_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="185dp"
            android:textColor="#fffd47"
            android:textSize="20sp"
            android:background="#4F00C2"/>
        <ScrollView android:id="@+id/textAreaScroller2"
            android:background="#80000000"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:scrollbars="vertical"
            android:layout_marginTop="210dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
        <TextView
            android:id="@+id/correctWrds_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:textColor="#00d20f"
            android:textSize="20sp"/>
        </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/wrongWrds_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="370dp"
            android:textColor="#fffd47"
            android:textSize="20sp"
            android:background="#4F00C2"/>
        <ScrollView android:id="@+id/textAreaScroller3"
            android:background="#80000000"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:scrollbars="vertical"
            android:layout_marginTop="396dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
        <TextView
            android:id="@+id/wrongWrds_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#FF00"
            android:textSize="20sp"/>
        </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/Your_Status_Btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="540dp"
            android:text="Your Status"
            android:onClick="Your_Status_ButtonFunction"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
